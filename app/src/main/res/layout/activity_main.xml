<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        >

        <LinearLayout
            android:id="@+id/categoriesContainer"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Arts"
                android:textSize="16sp"
                android:background="@drawable/artsbg"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Business"
                android:textSize="16sp"
                android:background="@drawable/businessbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Fashion"
                android:textSize="16sp"
                android:background="@drawable/fashionbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Food"
                android:textSize="16sp"
                android:background="@drawable/foodbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Health"
                android:textSize="16sp"
                android:background="@drawable/healtbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Home"
                android:textSize="16sp"
                android:background="@drawable/homebg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Movies"
                android:textSize="16sp"
                android:background="@drawable/moviesbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Politics"
                android:textSize="16sp"
                android:background="@drawable/politicsbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Science"
                android:textSize="16sp"
                android:background="@drawable/sciencebg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Sports"
                android:textSize="16sp"
                android:background="@drawable/sportsbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Tech"
                android:textSize="16sp"
                android:background="@drawable/techbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Theater"
                android:textSize="16sp"
                android:background="@drawable/theaterbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Travel"
                android:textSize="16sp"
                android:background="@drawable/travelbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="World"
                android:textSize="16sp"
                android:background="@drawable/worldbg"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.AppCompat.Light"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/Theme.AppCompat.Light" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.appcompat.widget.LinearLayoutCompat>